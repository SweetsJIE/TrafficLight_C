#include<iom16v.h>
#include<macros.h>
#include"MAX7219.h"
#include"74LS139.h"
#include"button.h"
#include"delay.h"
#include"ds1307.h"
#include"twi.h"
#include"usart.h"

uchar Number_H,Number_L,count=0;

void io_init()
{
  DDRA=0xFF;
  PORTA=0x00;
  DDRB=0xff;
  PORTB=0xff;
  DDRC=0xe7;
  PORTC=0x00;
  DDRD=0x02;
  PORTD=0x04;
}

void main()
{
  io_init();
  TWI_init();
  TWI_Write(WD_DS1307_ADDR,0X10,7);           //设置ds1307输出方波
  Init_MAX7219();
  int2_init();
  usart_init();
  SREG|=BIT(7);

  while(1)
  {
    if(daytimeFlag)
	{
	  LS139_G_L;
	  GICR |= (1<<INT2);			//打开外部中断2
	  while(sec<=50)
	  {
	    if(urgencyFlag)break;
	    Write_Max7219(1,decode_H(50-sec));
        Write_Max7219(2,decode_L(50-sec));
		Write_Max7219(3,decode_H(50-sec));
        Write_Max7219(4,decode_L(50-sec));
		main_green();
		second_red();
	  }
	  while(sec>50&&sec<=55)
	  {
	    if(urgencyFlag)break;
	    Write_Max7219(1,decode_H(55-sec));
        Write_Max7219(2,decode_L(55-sec));
		Write_Max7219(3,decode_H(55-sec));
        Write_Max7219(4,decode_L(55-sec));
		main_yellow();
		second_yellow();
	  }
	  while(sec>55&&sec<=85)
	  {
	    if(urgencyFlag)break;
	    Write_Max7219(1,decode_H(85-sec));
        Write_Max7219(2,decode_L(85-sec));
		Write_Max7219(3,decode_H(85-sec));
        Write_Max7219(4,decode_L(85-sec));
		main_red();
		second_green();
	  }
	  while(sec>85&&sec<=90)
	  {
	    if(urgencyFlag)break;
	    Write_Max7219(1,decode_H(90-sec));
        Write_Max7219(2,decode_L(90-sec));
		Write_Max7219(3,decode_H(90-sec));
        Write_Max7219(4,decode_L(90-sec));
		main_yellow();
		second_yellow();
	  }
	}
	if(urgencyFlag)
	{
	  
	  GICR &= ~(1<<INT2);			//关闭外部中断2
	  main_red();
	  second_red();
	  while(1)
	  {
	    if(urgencyFlag==0)break;
	    LS139_G_H;
		Write_Max7219(0x0c, 0x00);
		delay_nms(500);
		LS139_G_L;
		Write_Max7219(0x0c, 0x01);
		Write_Max7219(1,8);
        Write_Max7219(2,8);
		Write_Max7219(3,8);
        Write_Max7219(4,8);
		if(urgencyFlag==0)break;
		delay_nms(500);
	  }
	}
  }
  
  
}

//把秒数十位和个位分拆开
void decode_H(uchar data)
{
  Number_H=data/10;
}
void decode_L(uchar data)
{
  Number_L=data%10;
}