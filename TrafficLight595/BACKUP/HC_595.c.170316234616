/********************************************************************
            利用HC595芯片点亮led
********************************************************************/

#include<iom16v.h>
#include<macros.h>
#include"HC_595.h"
#include"USART.h"

const uchar seg[9]={0x3f,0x06,0x5b,0x4f,0x66,0x6d,0x7d,0x07,0x7f};
const uchar dip[4]={0x01,0x02,0x04,0x08};

void HC_595_init(void)           //io口配置
{
   DDRC|=(1<<HC595_CLK)|(1<<HC595_LOAD)|(1<<HC595_DIN);
   PORTC|=(1<<HC595_CLK)|(1<<HC595_LOAD)|(1<<HC595_DIN);
}

void Send_byte(uchar data)              //发送数据到HC595
{   
   uchar i;
   for(i=0;i<8;i++)
   {
      PORTC&=~(1<<HC595_CLK);
	  if(data&0x80)
	      PORTC|=(1<<HC595_DIN);
	  else 
	      PORTC&=~(1<<HC595_DIN);
	  PORTC|=1<<HC595_CLK;
	  data<<=1;
   }
}

void Drive_HC595(uchar data)        //载入数据到HC595
{
     uchar i;
	 DDRC=(1<<HC595_CLK)|(1<<HC595_LOAD)|(1<<HC595_DIN);
	 PORTC&=~(1<<HC595_CLK);
	 PORTC&=~(1<<HC595_LOAD); 
	 Send_byte(data); 
	 PORTC|=(1<<HC595_LOAD);
}

void Write_Data(uchar bit ,uchar data)
{
  Drive_HC595(dip[bit]);
  Drive_HC595(seg[data]);
  Drive_HC595(0x00);
  Drive_HC595(0x00);
}

